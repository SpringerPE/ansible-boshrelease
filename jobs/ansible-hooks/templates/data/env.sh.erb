#!/usr/bin/env bash

# Ansible configuration, override it by pre-defining the variable
export ANSIBLE_CONFIG=${ANSIBLE_CONFIG:-/var/vcap/jobs/ansible-hooks/config/ansible.cfg}

export ANSIBLE_LOCAL_TEMP="/var/vcap/sys/tmp/ansible-hooks/tmp"
export ANSIBLE_SSH_CONTROL_PATH_DIR="/var/vcap/sys/tmp/ansible-hooks/cp"
mkdir -p "$ANSIBLE_LOCAL_TEMP" && chmod 775 "$ANSIBLE_LOCAL_TEMP"
mkdir -p "$ANSIBLE_SSH_CONTROL_PATH_DIR" && chmod 775 "$ANSIBLE_SSH_CONTROL_PATH_DIR"
